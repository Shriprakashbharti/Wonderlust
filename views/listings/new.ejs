<% layout('/layouts/boilerplate') -%>
<div class="row mt-4">
    <div class="col-8 offset-2">
    <h3>Create List</h3>

    <form method="post"  action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            
        <label for="title" class="form-label">Title</label>
        <input
         name="listing[title]" type="text" 
         placeholder="Enter the title" 
         class="form-control"
         required
         >
         <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a Title.
          </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" 
            type="text" 
            placeholder="Enter the description"
             id=""
             class="form-control" required>

             </textarea>
             <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please fill the discription.
              </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input
             name="listing[image]"
              type="file"
          
             class="form-control"
             
             >
             <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter image.
              </div>
        </div>
    
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input 
                name="listing[price]" 
                type="number" 
                placeholder="Enter the price"
                class="form-control"
                required
                >
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter a valid price.
                  </div>
            </div>

            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input 
                name="listing[country]" 
                type="text" 
                placeholder="Enter the country"
                class="form-control"
                required
                >
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please enter a valid country.
                  </div>
            </div>
        </div>
        
        <div class="mb-3">
          <label for="category" class="form-label">Select Category</label>
          <select name="listing[category]" class="form-label " id="category">
            <option value="Trending">Trending</option>
            <option value="Room">Room</option>
            <option value="Iconics">Iconics</option>
            <option value="Beachfront">Beachfront</option>
            <option value="Farms">Farms</option>
            <option value="Islands">Islands</option>
            <option value="Arctic">Arctic</option>
            <option value="Boats">Boats</option>
            <option value="Tower">Tower</option>
            <option value="Beach">Beach</option>
        
          </select>
          <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please enter a valid location.
            </div>
      </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
            name="listing[location]" 
            type="text" 
            placeholder="Enter the location"
            class="form-control"
            required
            >
            <div class="valid-feedback">
                Looks good!
              </div>
              <div class="invalid-feedback">
                Please enter a valid location.
              </div>
        </div>
        
         <div class="d-grid gap-2 col-6 mx-auto mb-4">
            <button class="btn btn-primary" >Post</button>
        </div>
    </form>
</div>
</div>

<script src="Js/validation.js"></script>